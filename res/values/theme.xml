<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MMiniTheme" parent="android:Theme.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="android:windowActionBar">true</item>
        <item name="android:windowActionBarOverlay">false</item>

        <item name="android:alertDialogTheme">@style/MMiniTheme.Alert</item>

    </style>



    <style name="MyActionBar" parent="android:Widget.ActionBar">

    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomAlertDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColor">@color/dialog_text_color</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/dialog_text_size</item>
    </style>


    <style name="MMiniTheme.Alert">
        <item name="android:windowBackground">@color/test_color</item>
    </style>

    <color name="test_color">#77000000</color>



</resources>